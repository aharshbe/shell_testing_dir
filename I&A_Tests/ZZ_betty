#!/bin/bash
#
# simple test with ls to check if the shell can find ls in the PATH

command="betty *.c *.h"

if [[ $betty_check -eq 1 ]]; then
	\n
	echo ""
	echo ">>> Checking betty..."
	echo ""
	cd $bettycheckerdir && $command >> ./tmp_file_12345
else
	echo "no betty check... ;)"
fi

# wait a little bit
$SLEEP $SLEEPSECONDS


# clean up
if [[ $betty_check -eq 1 ]]; then
cd -
fi

rm -rf ./tmp_file_12345
echo ""
